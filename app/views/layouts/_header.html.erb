<header class="header navbar-fixed-top">
  <nav id="logo-nav" class="logo navbar navbar-default">
    <div class="container">
      <figure id="logo" class="logo">
        <span class="anchor" id="home"></span>
        <%= link_to root_path(anchor: "home"), class: "anchored", data: {anchor: "#home"} do %>
          <img class="site-logo" src="<%= image_url("douglas_teixeira_logo_298x59.png") %>" alt="Weight Tracker">
        <% end %>
        <figcaption id="site-slogan">You should <strong>hire me</strong>.</figcaption>
      </figure>
    </div>
  </nav>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">

      <div class="navbar-header">
        <a class="navbar-brand navbar-brand-small" href="<%= root_url %>"><%= image_tag("portfolio_logo_small_60x48.png") %></a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      
      <div class="main-nav collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav">
          <%= link_to root_url, class: "navbar-brand navbar-brand-big" do %>
            <%= image_tag("portfolio_logo_small_60x48.png", alt: "DougTeixeira.com Logo") %>
          <% end %>
          <li>
            <%= link_to "Home", root_path(anchor: "welcome"), class: "anchored", data: {anchor: "#welcome"}%>
          </li>
        </ul>
        
        <ul class="nav navbar-nav nav-pills navbar-right">
         <li class="active">
           <%= link_to root_path(anchor: "about"), class: "anchored", data: {anchor: "#about"} do %>
            About <span class="sr-only">(current)</span>
           <% end %>
         </li>
          <li>
            <%= link_to "Projects", root_path(anchor: "projects"), class: "anchored", data: {anchor: "#projects"} %>
          </li>
         <li>
           <%= link_to "Contact", root_path(anchor: "contact"), class: "anchored", data: {anchor: "#contact"} %>
         </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="caret"></span></a>
          <ul class="dropdown-menu inverse-dropdown" role="menu">
            <% if signed_in? %>
              <li><%= button_to "Sign Out", session_url, method: :delete, class: "btn btn-link" %></li>
            <% else %>
              <li><%= link_to "Sign In", new_session_url %></li>
            <% end %>
            <li class="divider"></li>
            <li><a href="#">Demo (Coming Soon!)</a></li>
          </ul>
        </li>
        </ul>
      </div>
    </div>
</nav>
</header>